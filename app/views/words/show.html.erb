
<div class="wordwrapper">



  <div class="wordletter">
    <%= @word.letter %>
  </div>

  <div class="wordmean">
    <%= @word.meaning %>
  </div>

  <div class="wordeng">
    <%= simple_format @word.engineer %>
  </div>
  <% if user_signed_in? && current_user.id == @word.user_id %>
  <div class="postManage">
  <%= link_to "編集", edit_word_path(@word.id), class: "wordManage__edit" %>
  <%= link_to "削除", word_path(@word.id), method: :delete, class: "postManage__delete" %>
  <%= link_to "ホームに戻る", root_path(@word.id), class: "wordManage__root" %>
  </div>
  <% end %>

</div>